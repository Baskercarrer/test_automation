{
    "default": {
        "parallel": 2,
        "format": [
            "summary",
            "json:cucumber-report/report.json",
            "html:cucumber-report/index.html"
        ],
        "formatOptions": {
            "colorsEnabled": true
        },
        "paths": [
            "features/**/*.feature"
        ],
        "requireModule": [
            "ts-node/register"
        ],
        "require": [
            "./src/stepdefs/**/*.ts",
            "./src/context/*.ts"
        ],
        "tags": "not @ignore",
        "worldParameters": {
            "username": "admin",
            "password": "admin",
            "headless": true,
            "browser": "chrome"
        },
        "retry": 0
    },
    "api": {
        "parallel": 2,
        "format": [
            "summary",
            "json:cucumber-report/apiReport.json",
            "html:cucumber-report/index.html"
        ],
        "formatOptions": {
            "colorsEnabled": true
        },
        "paths": [
            "features/api/*.feature"
        ],
        "requireModule": [
            "ts-node/register"
        ],
        "require": [
            "./src/stepdefs/**/*.ts",
            "./src/context/*.ts"
        ],
        "tags": "@api and not @ignore",
        "worldParameters": {
            "browser": "chrome",
            "headless": true
        },
        "retry": 0
    },
    "ui": {
        "parallel": 2,
        "format": [
            "summary",
            "json:cucumber-report/uiReport.json",
            "html:cucumber-report/index.html"
        ],
        "formatOptions": {
            "colorsEnabled": true
        },
        "paths": [
            "features/ui/*.feature"
        ],
        "requireModule": [
            "ts-node/register"
        ],
        "require": [
            "./src/stepdefs/**/*.ts",
            "./src/context/*.ts"
        ],
        "tags": "@ui and not @ignore",
        "worldParameters": {
            "browser": "chrome",
            "headless": true
        },
        "retry": 0
    }
}